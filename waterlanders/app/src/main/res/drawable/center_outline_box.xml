<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base shape with stroke on all sides -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.5dp"
                android:color="@color/gray" />
        </shape>
    </item>

    <!-- Overlay shape to hide the left side stroke -->
    <item
        android:left="0dp"
        android:right="100dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Overlay shape to hide the right side stroke -->
    <item
        android:left="100dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
